<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="02-create-sessions-table" author="dev">
        <createTable tableName="sessions">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="session_id" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_sessions_user"
                    referencedTableName="users" referencedColumnName="id"/>
            </column>
            <column name="current_state" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="last_activity" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex indexName="idx_sessions_user" tableName="sessions">
            <column name="user_id"/>
        </createIndex>
        <createIndex indexName="idx_sessions_active" tableName="sessions">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
