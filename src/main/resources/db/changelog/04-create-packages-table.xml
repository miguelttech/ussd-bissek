<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="04-create-packages-table" author="dev">
        <createTable tableName="packages">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="package_number" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="shipment_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_packages_shipment"
                    referencedTableName="shipments" referencedColumnName="id"/>
            </column>
            <column name="weight" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="dimensions" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <createIndex indexName="idx_packages_shipment" tableName="packages">
            <column name="shipment_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
